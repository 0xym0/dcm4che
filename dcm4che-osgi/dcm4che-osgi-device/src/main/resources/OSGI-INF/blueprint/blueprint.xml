<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<!-- this is the service this bundle is exposing (the Device Service) -->
	<service id="echoDevice" interface="org.dcm4che.net.DeviceServiceInterface" ref="echoDeviceImpl"/>
	
	<!-- this is the java class implementing the Echo Device Service -->	
	<bean class="org.dcm4che.sample.osgi.EchoDevice" 
			id="echoDeviceImpl" 
			activation="eager" 
			init-method="start"
			destroy-method="stop">
		<property name="bcontext" ref="blueprintBundleContext"/>
	</bean>
		
</blueprint>