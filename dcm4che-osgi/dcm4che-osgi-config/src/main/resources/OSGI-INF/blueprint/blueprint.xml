<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- this is the service this bundle is exposing (the Device Service) -->
    <service
        id="dicomConfiguration"
        interface="org.dcm4che.conf.api.DicomConfiguration"
        ref="ldapConf" />

    <!-- this is the java class implementing the Echo Device Service -->
    <bean
        class="org.dcm4che.sample.osgi.LdapConfigurationFactory"
        id="ldapConf"
        activation="eager"
        factory-method="createConfig">
        <argument value="file:///tmp/.ldap.properties" />
    </bean>
</blueprint>